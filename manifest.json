{
  "manifest_version": 3,
  "name": "EasyEDA Downloader",
  "version": "0.1.0",
  "description": "Extract LCSC part numbers and export symbol, footprint, and 3D model files.",
  "permissions": ["activeTab", "downloads", "storage"],
  "host_permissions": [
    "https://easyeda.com/*",
    "https://modules.easyeda.com/*"
  ],
  "background": {
    "service_worker": "src/service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Export EasyEDA part",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.jlcpcb.com/*", "*://*.lcsc.com/*"],
      "js": ["src/content_script.js"]
    }
  ]
}
